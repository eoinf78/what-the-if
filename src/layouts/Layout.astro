---
import ThemeManager from '../components/theme/ThemeManager.astro';
import ThemeToggleButton from '../components/theme/ThemeToggleButton.astro';
import ThemeScript from '../components/theme/ThemeScript.astro';
import FullModal from '../components/FullModal.astro';
import GithubLink from '../components/GithubLink.astro';
import '@fontsource/exo-2'

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
    <link rel="stylesheet" href="/styles/global.css" />
		<ThemeManager defaultTheme="dark" />
	</head>
	<body>
    <header>
      <div>
        <span>{title}</span>
      </div>
      <div class="header-actions">
        <GithubLink />
        <FullModal />
        <ThemeToggleButton />
      </div>
    </header>
		<slot />
    <ThemeScript />
	</body>
</html>
<style is:global>
	:root,
  :root[data-theme="light"] {
    --background-color: #ffffff;
    --border-color: #333333;
    --text-color: #000000;
    color-scheme: light;
  }
  @media (prefers-color-scheme: dark), :root[data-theme="dark"] {
    :root {
      --background-color: #333333;
      --border-color: #cccccc;
      --text-color: #ffffff;
      color-scheme: dark;
    }
  }

  body {
    font-family: 'Inter', sans-serif;
    background-color: var(--background-color);
    color: var(--text-color);
    margin: 0;
  }

</style>

<style lang="scss" is:global>
  button.navButton {
    background-color: transparent;
    border: none;
    color: inherit;
    width: 24px;
    height: 24px;
    cursor: pointer;
    padding: 0;
  }
  
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    background-color: var(--background-color);
    color: var(--text-color);
    border-bottom: 1px solid var(--border-color);
  
    .header-actions {
      display: flex;
      align-items: center;
      gap: 1rem;

      .github-url {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--text-color);
        text-decoration: none;

        svg {
          width: 24px;
          height: 24px;
        }
      }
    }
  }

  body {
    .modal {
      width: 90vw;
      max-width: 800px;
      height: 90vh;
      max-height: 500px;
      background-color: var(--background-color);
      color: var(--text-color);
      border: none;
      border-radius: 12px;
    }

    .modal__inner {
      height: 100%;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }

    .modal__content {
      padding: 1rem;
      gap: 0;

      h3 {
        margin-top: 0;
      }
    }

    .modal__close button {
      padding: 12px;
      text-align: center;
      height: auto;
      background-color: transparent;
      color: var(--text-color);

      &:hover,
      &:focus {
        background-color: transparent;
        text-decoration: underline;
      }
    }
  }
</style>
